# Noctis deployment environment
# This file is generated to /etc/noctis/noctis.env by the installer

# Paths
APP_DIR=/workspace
VENV_DIR=/workspace/venv

# Django
DJANGO_SETTINGS_MODULE=noctis_pro.settings
ASGI_APP=noctis_pro.asgi:application

# Bind for Daphne
HOST=127.0.0.1
PORT=8000

# Ensure imports resolve without WorkingDirectory
PYTHONPATH=/workspace

# Celery
CELERY_APP=noctis_pro
CELERY_LOGLEVEL=info

# Redis
REDIS_URL=redis://127.0.0.1:6379/0

# DICOM
DICOM_PORT=11112
DICOM_AET=NOCTIS_SCP

# Public URL reference
PUBLIC_URL=http://example.com/

# Webhook
WEBHOOK_HOST=127.0.0.1
WEBHOOK_PORT=9000
GITHUB_WEBHOOK_SECRET=your-long-random-secret
ENV_FILE=/etc/noctis/noctis.env