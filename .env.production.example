# NoctisPro Production Environment Configuration
# Copy this file to .env.production and customize the values

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-long-and-random
DJANGO_SETTINGS_MODULE=noctis_pro.settings

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,your-ngrok-url.ngrok-free.app
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Database Configuration
POSTGRES_DB=noctis_pro
POSTGRES_USER=noctis_user
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_WARNING_MINUTES=10

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Build Configuration
BUILD_TARGET=production

# Optional: Use SQLite instead of PostgreSQL
USE_SQLITE=False

# Ngrok Configuration (for demo/development)
NGROK_AUTHTOKEN=your-ngrok-auth-token
NGROK_STATIC_URL=your-static-url.ngrok-free.app