# NoctisPro Production Environment Configuration
# Optimized for Ubuntu Server with systemd autostart

# Django Settings
DEBUG=False
SECRET_KEY=noctis-production-secret-key-change-this-in-production-2024
DJANGO_SETTINGS_MODULE=noctis_pro.settings

# Security Settings for Production with Ngrok
ALLOWED_HOSTS=*,colt-charmed-lark.ngrok-free.app,localhost,127.0.0.1
SECURE_SSL_REDIRECT=False  # Disabled for ngrok compatibility
SESSION_COOKIE_SECURE=False  # Disabled for ngrok HTTP -> HTTPS proxy
CSRF_COOKIE_SECURE=False  # Disabled for ngrok HTTP -> HTTPS proxy
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Database Configuration (SQLite Fallback)
USE_SQLITE=True
POSTGRES_DB=noctis_pro
POSTGRES_USER=noctis_user
POSTGRES_PASSWORD=noctis_secure_password_2025
POSTGRES_HOST=localhost  # Local PostgreSQL instance
POSTGRES_PORT=5432

# Cache Configuration (Dummy Cache Fallback)
USE_DUMMY_CACHE=True
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Static and Media Files
STATIC_URL=/static/
STATIC_ROOT=/workspace/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/workspace/media
SERVE_MEDIA_FILES=True  # Enable direct media serving for ngrok

# Logging Configuration
LOGGING_LEVEL=INFO
LOG_FILE=/workspace/noctis_pro.log
DJANGO_LOG_LEVEL=INFO

# Build Configuration
BUILD_TARGET=production
ENVIRONMENT=production

# Performance Settings
CONN_MAX_AGE=300  # Database connection timeout
DATA_UPLOAD_MAX_MEMORY_SIZE=52428800  # 50MB
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440  # 2.5MB

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
SESSION_WARNING_MINUTES=10
SESSION_COOKIE_AGE=3600  # 1 hour

# Admin Configuration
ADMIN_EMAIL=admin@noctispro.local
ADMIN_USERNAME=admin
# ADMIN_PASSWORD=  # Will be prompted during setup

# Email Configuration (Optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_DIRECTORY=/workspace/backups
BACKUP_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_URL=/health/
HEALTH_CHECK_INTERVAL=30

# Time Zone
TIME_ZONE=UTC
USE_TZ=True

# DICOM Configuration
DICOM_STORAGE_PATH=/workspace/media/dicom
DICOM_MAX_FILE_SIZE=104857600  # 100MB
DICOM_ALLOWED_EXTENSIONS=.dcm,.dicom