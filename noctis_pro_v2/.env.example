# NoctisPro V2 Environment Configuration
# Copy this file to .env and configure your settings

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,colt-charmed-lark.ngrok-free.app

# Database (SQLite is used by default)
DATABASE_URL=sqlite:///db.sqlite3

# Static and Media Files
STATIC_ROOT=/workspace/noctis_pro_v2/staticfiles
MEDIA_ROOT=/workspace/noctis_pro_v2/media

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Ngrok Configuration
NGROK_STATIC_URL=colt-charmed-lark.ngrok-free.app
NGROK_AUTHTOKEN=your-ngrok-authtoken-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=/workspace/noctis_pro_v2/logs/noctis_pro.log