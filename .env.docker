# ====================================
# Noctis Pro Docker Environment File
# ====================================

# Django Settings
DEBUG=True
SECRET_KEY=your-very-long-secret-key-change-this-in-production-environment
DJANGO_SETTINGS_MODULE=noctis_pro.settings

# Build Configuration
BUILD_TARGET=development
# BUILD_TARGET=production  # Uncomment for production builds

# Database Configuration (PostgreSQL)
POSTGRES_DB=noctis_pro
POSTGRES_USER=noctis_user
POSTGRES_PASSWORD=noctis_secure_password_change_this

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Network Configuration
HOST=0.0.0.0
PORT=8000
DICOM_PORT=11112

# Admin User (for initial setup)
ADMIN_USER=admin
ADMIN_EMAIL=admin@noctis.local
ADMIN_PASS=admin123

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# DEFAULT_FROM_EMAIL=noctis@your-domain.com

# Domain Configuration (for production)
# DOMAIN_NAME=your-domain.com
# SERVER_IP=your.server.ip.address
# USE_SSL=false

# Security Settings (for production)
# SECURE_SSL_REDIRECT=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760  # 10MB

# Logging Level
LOG_LEVEL=INFO

# DICOM Configuration
DICOM_AET=NOCTIS_SCP
DICOM_STORAGE_PATH=/app/media/dicom

# Timezone
TIME_ZONE=UTC

# Language
LANGUAGE_CODE=en-us